@{
}


<div class="mx-auto rounded border p-4" style="width: 420px">
    <h2 class="text-center mb-3">Szczegóły zamówienia</h2>
    <hr />

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success" role="alert">@ViewBag.SuccessMessage</div>
        <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Wróć</a>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-5">Adres dostawy</div>
            <div class="col-7">@ViewBag.DeliveryAddress</div>
        </div>
        <div class="row mb-3">
            <div class="col-5">Sposób płatności</div>
            <div class="col-7">@ViewBag.PaymentMethod</div>
        </div>
        <div class="row mb-3">
            <div class="col-5">Łaczny koszt</div>
            <div class="col-7">@(ViewBag.Total)$</div>
        </div>
        <div class="row mb-3">
            <div class="col-5">ilość</div>
            <div class="col-7">@(ViewBag.CartSize)</div>
        </div>


        <form method="post">
            <div class="row">
                <div class="col-sm-6 d-grid">
                    <button type="submit" class="btn btn-primary">Potwierdź</button>
                </div>
                <div class="col-sm-6 d-grid">
                    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Wróć</a>
                </div>
            </div>
        </form>
    }

</div>